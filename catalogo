        }

        function contactClient(phone) {
            const cleanPhone = phone.replace(/\D/g, '');
            const message = `Ol√°! Este √© um contato da Aline Menezes Beauty sobre seu agendamento.`;
            const whatsappUrl = `https://wa.me/55${cleanPhone}?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
        }

        // Initialize Application with Enhanced Persistence
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Inicializando Aline Menezes Beauty - Cat√°logo Interativo...');
            
            // Check data integrity first
            const integrityCheck = checkDataIntegrity();
            if (!integrityCheck) {
                console.warn('‚ö†Ô∏è Problemas de integridade detectados - dados ser√£o validados durante o carregamento');
            }
            
            // Load all saved data with enhanced system
            const dataLoaded = loadAllDataFromStorage();
            if (dataLoaded) {
                console.log('‚úÖ Sistema de persist√™ncia completo carregado com sucesso');
            } else {
                console.log('‚ö†Ô∏è Usando configura√ß√£o padr√£o - primeira execu√ß√£o ou erro no carregamento');
            }
            
            // Initialize services display
            renderServices();
            
            // Setup auto-save system
            console.log('‚ö° Sistema de auto-save ativado - salvamento autom√°tico a cada 2 segundos ap√≥s altera√ß√µes');
            
            // Show welcome popup after 2 seconds
            setTimeout(showWelcomePopup, 2000);
            
            // Add input masks
            addInputMasks();
            
            // Setup periodic data integrity checks (every 5 minutes)
            setInterval(() => {
                checkDataIntegrity();
            }, 5 * 60 * 1000);
            
            // Setup storage monitoring
            const storageUsed = calculateStorageUsage();
            if (parseFloat(storageUsed.percentage) > 80) {
                console.warn(`‚ö†Ô∏è Armazenamento quase cheio: ${storageUsed.percentage}% usado`);
            }
            
            // Final initialization log
            console.log('üéâ SISTEMA COMPLETAMENTE INICIALIZADO!');
            console.log('üìä Status do Sistema:');
            console.log(`   ‚Ä¢ Produtos: ${services.length}`);
            console.log(`   ‚Ä¢ Clientes: ${clientsDatabase.length}`);
            console.log(`   ‚Ä¢ Imagens: ${countTotalImages()}`);
            console.log(`   ‚Ä¢ Armazenamento: ${storageUsed.used}MB (${storageUsed.percentage}%)`);
            console.log('üì± Todas as funcionalidades est√£o operacionais');
            console.log('üíæ Sistema de persist√™ncia completo ativo');
            console.log('üîí Dados e imagens salvos permanentemente at√© altera√ß√£o manual');
            console.log('‚ö° Auto-save ativo para todas as altera√ß√µes');
            console.log('üßπ Ferramentas de limpeza dispon√≠veis no painel profissional');
            console.log('üì¶ Sistema de backup e exporta√ß√£o dispon√≠vel');
        });

        function addInputMasks() {
            // CPF mask
            document.addEventListener('input', function(e) {
                if (e.target.id && (e.target.id.includes('CPF') || e.target.id.includes('cpf'))) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                    e.target.value = value;
                }
                
                // Phone mask
                if (e.target.id && (e.target.id.includes('Phone') || e.target.id.includes('phone'))) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{2})(\d)/, '($1) $2');
                    value = value.replace(/(\d{5})(\d)/, '$1-$2');
                    e.target.value = value;
                }
            });
        }

        // Close modals when clicking outside
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal')) {
                e.target.classList.remove('active');
            }
        });
