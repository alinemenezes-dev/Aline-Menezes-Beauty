        function contactWhatsApp() {
            const message = `Ol√°! Vim atrav√©s do cat√°logo online e gostaria de mais informa√ß√µes sobre os servi√ßos.`;
            const whatsappUrl = `https://wa.me/5549998200000?text=${encodeURIComponent(message)}`;
